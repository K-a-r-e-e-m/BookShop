# Flask secret key for cryptographic operations. Use a strong, random key.
SECRET_KEY=your_secret_key_here

# Session management configuration. Can be 'filesystem', 'redis', 'memcached', etc.
SESSION_TYPE=filesystem

# Cookie settings for security. For cross-origin requests, set to 'None'.
SESSION_COOKIE_SAMESITE=None

# Use 'True' for HTTPS (production) and 'False' for local development (HTTP).
SESSION_COOKIE_SECURE=True  # Set to False during local development

# Session lifetime in seconds. Adjust as needed.
PSLT=3600  # Example: 1 hour

# Mail server configuration for sending emails (e.g., for password resets).
MAIL_SERVER=smtp.example.com  # Example: 'smtp.gmail.com'
MAIL_PORT=587  # Common port for TLS, 465 for SSL
MAIL_USE_TLS=True  # Set to 'False' if not using TLS
MAIL_USERNAME=your_email_username_here
MAIL_PASSWORD=your_email_password_here
MAIL_DEFAULT_SENDER=your_email_sender_address_here

# Flask-OAuthlib setting for insecure transport (useful for development).
# Set to '1' to enable insecure transport; should be disabled in production.
OAUTHLIB_INSECURE_TRANSPORT=1
